{
  "hosting": {
    "public": "client/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "dataconnect": [
    {
      "serviceId": "last-bite",
      "serviceLocation": "us-central1",
      "schemaFiles": "./dataconnect/schema/schema.gql",
      "connectorFiles": [
        "./dataconnect/example/main.gql",
        "./dataconnect/example/connector.yaml"
      ]
    }
  ]
}